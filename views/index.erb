<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <h1>これはERBで書きました</h1>
        
        <% if @message %>
            <div class="message"><%=@message %></div>
        <% end %>
        
        <div>
            <a href="/contact_new">連絡先の新規作成</a>
        </div>
        
        <div>
            <table>
                <caption>連絡先一覧</caption>
                <thead>
                    <tr><th>番号</th><th>名前</th></tr>
                </thead>
                <tbody>
                    <% @contacts.each_with_index do |contact, index| %>
                        <tr><td><%=index %></td><td><%=contact.name%></td></tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <footer>
            <a href="/about.html">このサービスについて</a>
            <p>今の時刻は <%=@now%></p>
        </footer>
    </body>
</html>